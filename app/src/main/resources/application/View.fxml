<?xml version="1.0" encoding="UTF-8"?>

<?import canvas.MapCanvas?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<Scene xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="canvas.Controller">
    <BorderPane prefWidth="1280.0" prefHeight="720.0">
        <top>
            <MenuBar>
                <Menu text="Appearance">
                    <Menu fx:id="categories" text="Toggle categories"/>
                </Menu>
            </MenuBar>
        </top>
        <center>
            <MapCanvas fx:id="canvas"
                       prefWidth="1280"
                       prefHeight="720"
            />
        </center>
    </BorderPane>
</Scene>
